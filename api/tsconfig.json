{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "./",
    "allowJs": true,
    "strict": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
